mixin recruit-mixin(recruit)
  div(id="container-" + recruit._id).recruit-container
    h3=recruit.name
    p
      em Class of #{recruit.classYear}
      span  | 
      em Power Index #{recruit.powerIndex} 
    p
      a(href="/recruits/#{recruit._id}") Profile
      span  | 
      a(href="http://www.collegeswimming.com/swimmer/"+recruit.collegeSwimmingId)
        |  CollegeSwimming
    table.table-striped.recruit-times
      tr
        th Event
        th Time
        th Points
        th.mobile-hidden NR
        th.mobile-hidden TR
      for time in recruit.times
        tr(id="time-"+time._id)
          td=time.eventName
          td=time.timeString
          
          td=time.points || "-"
          td.mobile-hidden=time.nationalRank || "-"
          td.mobile-hidden=time.teamRank || "-"
            button.btn.delete-time-btn
              span.glyphicon.glyphicon-remove
    div.recruit-error.error
    div.add-manual-time.margin-top
        span.inline
          label Event
          select.form-control.new-event-select
            option(value="50 Y Free") 50 Y Free
            option(value="100 Y Free") 100 Y Free
            option(value="200 Y Free") 200 Y Free
            option(value="500 Y Free") 500 Y Free
            option(value="1000 Y Free") 1000 Y Free
            option(value="1650 Y Free") 1650 Y Free
            option(value="100 Y Back") 100 Y Back
            option(value="200 Y Back") 200 Y Back
            option(value="100 Y Breast") 100 Y Breast
            option(value="200 Y Breast") 200 Y Breast
            option(value="100 Y Fly") 100 Y Fly
            option(value="200 Y Fly") 200 Y Fly
            option(value="200 Y IM") 200 Y IM
            option(value="400 Y IM") 400 Y IM
        span.inline
          label Time
          input(type="text", name="time", size=10).new-time-input.form-control
        button(type="submit" id="new-time-"+recruit._id).new-time-btn.btn.update-btn.margin-right-5
          span.glyphicon.glyphicon-plus
        button(id="new-time-"+recruit._id).new-time-btn.btn.btn-danger.time-cancel-btn
          span.glyphicon.glyphicon-remove
    button.btn.btn-danger.delete-btn Delete
    button.btn.btn-default.archive-btn Archive
    button.btn.add-update-btn.update-btn Add New Time
    div.are-you-sure
      p="Are you sure you want to delete "+recruit.name+"?"
      button.btn.btn-danger.delete-confirm-btn.margin-right.margin-bottom Yes
      button.btn.btn-default.delete-deny-btn.margin-bottom No!
    div.are-you-sure-archive
      p="Are you sure you want to archive "+recruit.name+"? You can no longer edit archived recruits."
      button.btn.btn-danger.archive-confirm-btn.margin-right.margin-bottom Yes
      button.btn.btn-default.archive-deny-btn.margin-bottom No!

