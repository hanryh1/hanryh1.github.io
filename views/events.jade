extends layout
block scripts
    script(src='js/events.js')  
block content
  mixin sidebar-mixin()
  div.container.events-container
    h1 Event Rank
    div.row
      div.col-md-1
      div#event-selection.col-md-5
        div.error#event-error
        div.form-group
          label Event
          select.form-control#select-event
            option(value="50 Y Free") 50 Y Free
            option(value="100 Y Free") 100 Y Free
            option(value="200 Y Free") 200 Y Free
            option(value="500 Y Free") 500 Y Free
            option(value="1000 Y Free") 1000 Y Free
            option(value="1650 Y Free") 1650 Y Free
            option(value="100 Y Back") 100 Y Back
            option(value="200 Y Back") 200 Y Back
            option(value="100 Y Breast") 100 Y Breast
            option(value="200 Y Breast") 200 Y Breast
            option(value="100 Y Fly") 100 Y Fly
            option(value="200 Y Fly") 200 Y Fly
            option(value="200 Y IM") 200 Y IM
            option(value="400 Y IM") 400 Y IM
        div.form-group
          label Gender
          div#select-gender
            label.radio-inline
              input(type="radio" value="M" name="gender" checked="checked")
              span Male
            label.radio-inline
              input(type="radio" value="F" name="gender")
              span Female
        div.form-group
          label Include Archived Swimmers?
          div#include-archive
            label.radio-inline
              input(type="radio" value="0" name="archived" checked="checked")
              span No
            label.radio-inline
              input(type="radio" value="1" name="archived")
              span Yes
      div#event-rank.col-md-5
        h2#event-header Event Rank
      div.col-md-1

    include sidebar-mixin
