extends layout
block scripts
  script(src='/js/compare.js')
  script(src='/js/bootstrap.min.js')
block content
  mixin sidebar-mixin()
  div.container
    h1.centered Compare
    div.row.margin-20-10
      div.col-md-1
      div#error
      div#select-people.col-md-5
        form
        div.form-group
          label Recruit
          select.form-control#select-recruit
            for recruit in recruits
              option(value = recruit)= recruit
        div.form-group
          label Team Member
          select.form-control#select-team-member
            for swimmer in roster
              option(value = swimmer)= swimmer
      div#comparison-results.col-md-5
      div.col-md-1
    include sidebar-mixin
